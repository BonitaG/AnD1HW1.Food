<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/view1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Booking details"
        android:layout_margin="25dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/view2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WAROENG DOWN"
        app:layout_constraintLeft_toLeftOf="@id/view1"
        app:layout_constraintRight_toRightOf="@id/view1"
        app:layout_constraintTop_toBottomOf="@id/view1"
        android:layout_marginLeft="12dp"/>
    <TextView
        android:id="@+id/view3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NORMAL"
        app:layout_constraintLeft_toLeftOf="@id/view2"
        app:layout_constraintRight_toRightOf="@id/view2"
        app:layout_constraintTop_toBottomOf="@id/view2"
        android:layout_marginRight="52dp"/>
    <TextView
        android:id="@+id/view4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="------------------------------------------------------------------------------------------"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view3"/>
    <TextView
        android:id="@+id/view5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jumlah kursi"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view4"
        android:layout_marginLeft="30dp"/>
    <TextView
        android:id="@+id/view6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="25 Kursi"
        android:textSize="22sp"
        app:layout_constraintLeft_toLeftOf="@id/view5"
        app:layout_constraintRight_toRightOf="@id/view5"
        app:layout_constraintTop_toBottomOf="@id/view5"/>
    <TextView
        android:id="@+id/view7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date and Time"
        app:layout_constraintLeft_toRightOf="@id/view5"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view4"/>
    <TextView
        android:id="@+id/view8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20 June 8PM"
        android:textSize="22sp"
        android:layout_marginLeft="30dp"
        app:layout_constraintLeft_toLeftOf="@id/view7"
        app:layout_constraintRight_toRightOf="@id/view7"
        app:layout_constraintTop_toBottomOf="@id/view7"/>
    <TextView
        android:id="@+id/view9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Manue package"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toLeftOf="@id/view6"
        app:layout_constraintRight_toRightOf="@id/view6"
        app:layout_constraintTop_toBottomOf="@id/view6"/>
    <TextView
        android:id="@+id/view10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CHICKEN GEPREK"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view9"/>
    <TextView
        android:id="@+id/view11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2 Pieces"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="55dp"
        app:layout_constraintTop_toBottomOf="@id/view10"/>
    <TextView
        android:id="@+id/view12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=":"
        android:textSize="50sp"
        android:layout_marginRight="50dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/view9"/>
    <ImageView
        android:id="@+id/image0"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/salad"
        app:layout_constraintTop_toBottomOf="@id/view9"
        app:layout_constraintLeft_toLeftOf="@id/view9">

    </ImageView>

    <LinearLayout
        android:id="@+id/linear"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view7"
        android:background="#6E1F7C">
        <TextView
            android:id="@+id/view13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price"
            android:textColor="#fff"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"/>
        <TextView
            android:id="@+id/view14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2x CHICKEN GEPREK     $ 41,00"
            android:textSize="22sp"
            android:textColor="#fff"
            android:layout_marginLeft="30dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/view15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="People present"
        app:layout_constraintTop_toBottomOf="@id/linear"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="200dp"
        android:layout_marginTop="20dp"/>
    <LinearLayout
        android:id="@+id/linear1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintTop_toBottomOf="@id/view15"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp">

        <ImageView
            android:id="@+id/image1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:src="@drawable/bill" />

        <ImageView
            android:id="@+id/image2"
            android:layout_marginLeft="10dp"
            android:src="@drawable/hill"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

        <ImageView
            android:id="@+id/image3"
            android:layout_marginLeft="10dp"
            android:src="@drawable/trump"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

        <ImageView
            android:id="@+id/image4"
            android:layout_marginLeft="10dp"
            android:src="@drawable/mel"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

        <EditText
            android:id="@+id/edit_text"
            android:layout_marginLeft="10dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="  +20"
            android:background="@android:color/holo_blue_bright"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>